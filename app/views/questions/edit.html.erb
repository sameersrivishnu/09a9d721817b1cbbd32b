
<h2><%= @question.question %></h2>
<h4>Topic:<%= @question.topic.topic_name %></h4>

<%= form_with(model: @question, local: true) do |form| %>
  <div class="field">
    <%= form.label :answer %>
    <%= form.text_field :answer %>
  </div>
  <div class="actions">
    <%= form.submit  "Submit Answer"%>
  </div>
<% end %>


<h1>Answers</h1>


<%if @question.present?%>
<% question = @question.answers %>
<% question.each do |ans| %>
<div class="col-md-12" style="color: blue;">
<h3>..............................</h3>
<%= ans.answer%>
</div>
<div class="col-md-12" style="color: blue;">
by:<%= ans.user.email%>
</div>
<% end %>
<% end%>